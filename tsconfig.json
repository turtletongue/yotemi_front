{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@components": [
        "components"
      ],
      "@redux/*": ["redux/*"],
      "@hooks/*": ["hooks/*"],
      "@contract": ["contract"],
      "@utils": [
        "utils"
      ],
      "@types": ["types"],
      "@app/*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
